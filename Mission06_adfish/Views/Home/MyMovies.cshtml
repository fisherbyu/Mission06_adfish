@{
    ViewData["Title"] = "My Movie";

}

@model List<Movie>

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Title: </td>
            <td>Category: </td>
            <td>Year: </td>
            <td>Director: </td>
            <td>Rating: </td>
            <td>Edited: </td>
            <td>Lent to: </td>
            <td>Notes: </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Category</td>
                    <td>@movie.Year</td>
                    <td>@movie.Director</td>
                    <td>@movie.Rating</td>
                    <td>@movie.Edited</td>
                    <td>@movie.LentTo</td>
                    <td>@movie.Notes</td>
                </tr>
            }
    </tbody>
</table>

